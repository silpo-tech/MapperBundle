{
  "name": "silpo-tech/mapper-bundle",
  "type": "library",
  "description": "Symfony mapper bundle, easy way to convert data.",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "symfony/dependency-injection": "^6.0|^7.0",
    "mark-gerarts/auto-mapper-plus": "^1.3",
    "mark-gerarts/automapper-plus-bundle": "^1.2",
    "symfony/validator": "^6.0|^7.0",
    "phpdocumentor/reflection-docblock": "^5.6"
  },
  "config": {
    "bin-dir": "bin",
    "symfony/runtime": true
  },
  "require-dev": {
    "symfony/http-kernel": "6.0|^7.0",
    "phpunit/phpunit": "^11.5",
    "doctrine/doctrine-bundle": "^2.12",
    "symfony/property-info": "*",
    "doctrine/orm": "*",
    "symfony/yaml": "*",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload":     {
    "psr-4": { "MapperBundle\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "MapperBundle\\Tests\\": "tests/" }
  },
  "scripts": {
    "test:coverage": {
      "command": "APP_ENV=test php -d extension=pcov.so -d pcov.enabled=1 bin/phpunit --colors=never --coverage-clover reports/coverage/clover.xml --log-junit reports/junit.xml"
    },
    "test:run": [
      "APP_ENV=test php bin/phpunit --color=always"
    ]
  }
}
